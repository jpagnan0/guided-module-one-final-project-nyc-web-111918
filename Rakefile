require_relative 'config/environment'
require 'sinatra/activerecord/rake'

desc 'starts a console'
task :console do
  print "#  Model Class - Singular with the first letter of each word capitalized (e.g., BookClub).\n" + "#  Database Table - Plural with underscores separating words (e.g., book_clubs).\n" + "#  create model => class\n" + "#  create migration\n" + "#  run migration\n" + "#  check your schema\n" + "#  test!"
  Pry.start
end
